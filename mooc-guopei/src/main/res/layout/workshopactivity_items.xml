<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="96dp"
        android:background="@color/white" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/default_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="93dp"
            android:background="@color/default_color" />

        <View
            android:id="@+id/top_line"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginLeft="24dp"
            android:background="#DFDFDF" />

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_below="@id/top_line"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/lesson_icon" />

            <TextView
                android:id="@+id/them_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="25dp"
                android:text="主题一"
                android:textColor="@color/theme_color"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起止时间  : "
                android:textColor="#8c9f9b"
                android:textSize="11sp"
                android:textStyle="italic" />

            <TextView
                android:id="@id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015.06.12-2015.02.06"
                android:textColor="#8c9f9b"
                android:textSize="11sp"
                android:textStyle="italic" />
        </LinearLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_below="@id/ll_content"
            android:layout_marginLeft="24dp"
            android:background="#DFDFDF" />

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_content"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@id/line2"
            android:orientation="vertical"
            android:paddingBottom="12dp" >

            <TextView
                android:id="@id/title"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="请分析郑成功收复台湾的原因"
                android:textColor="#000000"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/rl_replynum"
                android:layout_width="wrap_content"
                android:layout_height="15dp" >

                <TextView
                    android:id="@+id/jinghua"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="精华 : "
                    android:textColor="#666666"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/jianghuanum"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="7dp"
                    android:layout_toRightOf="@id/jinghua"
                    android:gravity="left"
                    android:text="8"
                    android:textColor="#666666"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/reply"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/jianghuanum"
                    android:text="回帖 : "
                    android:textColor="#666666"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/replynum"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/reply"
                    android:text="8"
                    android:textColor="#666666"
                    android:textSize="11sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp" >

                    <TextView
                        android:id="@+id/discuss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="去讨论"
                        android:textColor="#666666"
                        android:textSize="11sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/workshop" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_recourse"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/resource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="资源数 : "
                    android:textColor="#666666"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/resourcenum"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/resource"
                    android:text="8"
                    android:textColor="#666666"
                    android:textSize="11sp" />

                <LinearLayout
                    android:id="@+id/updaterecourse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/resourcenum_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上传资源"
                        android:textColor="#666666"
                        android:textSize="11sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/upload_ico" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ll_content"
            android:layout_marginTop="57dp"
            android:background="#D3D3D3" />
    </RelativeLayout>

</LinearLayout>