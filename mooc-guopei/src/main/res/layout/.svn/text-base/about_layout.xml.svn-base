<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <com.whatyplugin.imooc.ui.view.BaseTitleView
        android:id="@id/rl_titile"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/mooc_48_dp"
        app:middle_title="@string/about_label" />

    <View
        android:id="@id/line"
        style="@style/GuidanceLineStyle"
        android:layout_width="fill_parent"
        android:layout_marginTop="@dimen/mooc_48_dp"
        android:layout_below="@id/title_layout" />

    <ImageView
        android:id="@id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/logo_about" />

    <TextView
        android:id="@id/version"
        style="@style/VersionTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="@dimen/mooc_10_dp" />

    <TextView
        android:id="@id/copyright"
        style="@style/CopyRightTextStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/mooc_20_dp"
        android:gravity="center"
        android:text="@string/copyright_label"
        android:visibility="gone" />

    <TextView
        android:id="@id/QQ"
        style="@style/CopyRightTextStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/copyright"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/mooc_20_dp"
        android:layout_marginRight="@dimen/mooc_20_dp"
        android:gravity="center"
        android:text="@string/qq_group_label"
        android:visibility="gone" />

</RelativeLayout>