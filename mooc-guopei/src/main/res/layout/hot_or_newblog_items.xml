<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_color"
    android:orientation="vertical"
    android:paddingTop="9dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="13dp"
        android:paddingRight="11dp"
        android:paddingTop="10dp" >

        <com.whatyplugin.imooc.ui.view.CircleImageView
            android:id="@+id/pic"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/user_default_img"
            app:border_color="@color/light"
            app:border_width="2dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="杨俊"
                android:textColor="#666666"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/blog_name"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="我的国培情节111111111111"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/like_blog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/blog_name"
                    android:src="@drawable/new_ico_like" />

                <TextView
                    android:id="@+id/like_blog_num"
                    android:layout_width="21dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:layout_toRightOf="@id/like_blog"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="92"
                    android:textColor="#ff9b9b9b"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/watch_blog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/like_blog_num"
                    android:src="@drawable/new_ico_view" />

                <TextView
                    android:id="@+id/watch_num"
                    android:layout_width="21dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:layout_toRightOf="@id/watch_blog"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:text="369"
                    android:textColor="#ff9b9b9b"
                    android:textSize="11sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/new_ico_back" />
            </RelativeLayout>

            <TextView
                android:id="@+id/blog_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015.6.22 10:30"
                android:textColor="#ff9b9b9b"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/line" />

</LinearLayout>