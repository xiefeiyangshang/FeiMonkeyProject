<?xml version="1.0" encoding="utf-8"?>
<ukplugin.co.senab.photoview.KeyboardRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF" >

    <RelativeLayout
        android:id="@+id/rl_no_key_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageView
                android:id="@+id/no_key_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/mooc_93_dp"
                android:layout_marginTop="@dimen/mooc_93_dp"
                android:src="@drawable/logo" />

            <ImageView
                android:id="@+id/have_key_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/mooc_60_dp"
                android:layout_marginTop="@dimen/mooc_65_dp"
                android:background="@drawable/logo_key"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_marginLeft="@dimen/mooc_17_dp"
            android:layout_marginRight="@dimen/mooc_17_dp"
            android:background="@drawable/login_txt" >

            <ImageView
                android:id="@id/email_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/mooc_30_dp"
                android:layout_marginRight="@dimen/mooc_30_dp"
                android:src="@drawable/login_m" />

            <EditText
                android:id="@id/email_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/email_image"
                android:background="@color/edittext_bg"
                android:hint="@string/emailHint"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/allcourse_learnedtime_color"
                android:textSize="@dimen/text_22_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_marginLeft="@dimen/mooc_17_dp"
            android:layout_marginRight="@dimen/mooc_17_dp"
            android:background="@drawable/login_txt" >

            <ImageView
                android:id="@id/password_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/mooc_30_dp"
                android:layout_marginRight="@dimen/mooc_30_dp"
                android:src="@drawable/login_key" />

            <EditText
                android:id="@id/password_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/password_image"
                android:background="@color/edittext_bg"
                android:hint="@string/passwordHint"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/allcourse_learnedtime_color"
                android:textSize="@dimen/text_22_size" />
        </RelativeLayout>
T
        <Button
            android:id="@id/login"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/mooc_50_dp"
            android:layout_below="@id/password"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/mooc_17_dp"
            android:layout_marginRight="@dimen/mooc_17_dp"
            android:layout_marginTop="@dimen/mooc_15_dp"
            android:background="@drawable/chat_on_bg"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="@dimen/text_22_size" />

        <CheckBox
            android:layout_marginLeft="@dimen/mooc_5_dp"
            android:layout_marginTop="@dimen/mooc_20_dp"
            android:layout_below="@+id/login"
            android:id="@+id/login_recordpwd_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:textSize="@dimen/text_15_size"
            android:visibility="visible"
            android:textColor="@color/allcourse_learnedtime_color"
            android:button="@drawable/checkbox_selector"
            android:checked="false"
            android:layout_alignLeft="@+id/login"
            android:layout_alignStart="@+id/login"/>
    </RelativeLayout>

</ukplugin.co.senab.photoview.KeyboardRelativeLayout>