<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/mooc_50_dp"
    android:gravity="center_vertical" >

    <RelativeLayout
        android:id="@id/list_item_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/mooc_50_dp"
        android:gravity="center_vertical"
        android:padding="@dimen/mooc_10_dp" >

        <ImageView
            android:id="@id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/small_next" />

        <TextView
            android:id="@id/coursename"
            style="@style/ChapterNameTextStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/mooc_10_dp"
            android:ellipsize="end"
            android:gravity="left"
            android:textColor="@color/black"
            android:lines="1"
            android:text="fjowejg机构金额我 " />
    </RelativeLayout>

    <TextView
        android:id="@id/clear_history"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/mooc_50_dp"
        android:gravity="center"
        android:text="@string/clear_search_history"
        android:textColor="@color/course_type_item_bottom_line"
        android:textSize="@dimen/text_18_size" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/main_bottom_line"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/mooc_10_dp"
        android:background="@color/course_type_item_bottom_line" />

</RelativeLayout>