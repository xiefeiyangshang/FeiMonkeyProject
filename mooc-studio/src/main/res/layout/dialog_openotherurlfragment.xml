<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_color"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="19dp"
        android:text="更多"
        android:textColor="#3b3a3a"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/other_url_webview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="13dp"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/other_url_backgroup"
                android:padding="16dp"
                android:src="@drawable/otherurl_browser" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:text="浏览器打开"
                android:textColor="#4e5151"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/other_url_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="13dp"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/other_url_backgroup"
                android:padding="16dp"
                android:src="@drawable/otherurl_copy_link" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:text="复制链接"
                android:textColor="#4e5151"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/other_url_reload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="13dp"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/other_url_backgroup"
                android:padding="16dp"
                android:src="@drawable/otherurl_reload" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:text="重新加载"
                android:textColor="#4e5151"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/other_url_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/select_8dp_backgroup"
        android:text="取消"
        android:textColor="#000000"
        android:textSize="16sp" />

</LinearLayout>