<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/rl_guide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#89000000"
    android:orientation="vertical" >

    <ImageView
        android:id="@id/iv_test_finger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/test_hint_graphic" />

    <ImageButton
        android:id="@id/iv_test_know"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_test_finger"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dip"
        android:background="#00000000"
        android:src="@drawable/test_hint_btn" />

</RelativeLayout>