<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/upgrade_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@id/custombg"
        android:layout_width="@dimen/mooc_270_dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/corners_webtrn"
        android:orientation="vertical" >

        <TextView
            android:id="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/mooc_10_dp"
            android:layout_marginTop="@dimen/mooc_10_dp"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/text_18_size" />

        <TextView
            android:id="@id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mooc_20_dp"
            android:layout_marginTop="@dimen/mooc_10_dp"
            android:maxLines="8"
            android:scrollbars="vertical"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_16_size" />

        <View
            android:id="@id/line2"
            style="@style/SelectStyle"
            android:layout_width="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/mooc_25_dp" />

        <LinearLayout
            android:id="@+id/button_content"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/commit"
                android:text="确定"
                style="@style/dialog_message_button" />

            <View
                style="@style/SelectStyle"
                android:layout_width="@dimen/main_bottom_line"
                android:layout_height="fill_parent" />

            <TextView
                android:id="@id/cancel"
                style="@style/dialog_message_button"
                android:text="@string/cancel" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>