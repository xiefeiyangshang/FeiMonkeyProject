apply plugin: 'com.android.application'
apply from: rootProject.getRootDir().getAbsolutePath() + "/utils.gradle"
android {
    defaultConfig {
        applicationId "cn.com.whatyguopei.mooc"
        minSdkVersion minSdkVer
        targetSdkVersion targetSdkVer
        // 每次更新版本的时候 versionCode 和 versionName 都要 比上个版本高
        versionCode 32
//        versionName "13.07.11"
        versionName "17.08.24"
        //避免安装app时出现65535问题,需要Build Tools 21.1.0+，并且支持库（Support repository）版本为8,transformClassesWithMultidexlistForRelease
        multiDexEnabled true
        resConfigs "zh"
    }
    signingConfigs {
        debug {
        }
        release {
            keyAlias key_Alias
            keyPassword key_Password
            storeFile file(store_File)
            storePassword store_Password
            //storePassword System.console().readLine("\nKeystore password: ")
        }
    }
    buildTypes {
        release {
            minifyEnabled false
            shrinkResources true
            zipAlignEnabled true
            signingConfig signingConfigs.release
            proguardFiles getDefaultProguardFile('proguard-android.txt'), 'proguard-rules.pro'
        }
    }
}
android {
    packagingOptions {
        exclude 'AndroidManifest.xml'
    }
}
dependencies {
    compile(name: 'actionbarsherlock-release', ext: 'aar')
    compile(name: 'slidingmenu-release', ext: 'aar')
    compile project(':mooc-studio')
//    compile(name: 'mooc-studio-release', ext: 'aar')
//    compile(name: 'mooc-mediaplayer-release', ext: 'aar')
}
