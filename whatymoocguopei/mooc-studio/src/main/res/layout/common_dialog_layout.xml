<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >

    <LinearLayout
        android:id="@+id/loading_dialog"
        style="@style/fillx"
        android:orientation="vertical"
        android:visibility="invisible" >

        <ImageView
            android:id="@+id/loading_pic"
            style="@style/wrap"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/mooc_30_dp"
            android:src="@drawable/loading_pic" >
        </ImageView>

        <TextView
            android:id="@+id/loading_message"
            style="@style/common_dialog_message_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tip_dialog"
        style="@style/fillx"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dialog_message"
            style="@style/common_dialog_message_content" />

        <View
            android:id="@id/line2"
            style="@style/SelectStyle"
            android:layout_width="fill_parent"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:id="@+id/button_content"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bt_cancel"
                style="@style/common_dialog_message_button"
                android:background="#00000000"
                android:text="@string/cancel"
                android:textColor="@color/theme_color" />

            <View
                style="@style/SelectStyle"
                android:layout_width="@dimen/main_bottom_line"
                android:layout_height="fill_parent" />

            <Button
                android:id="@+id/bt_commit"
                style="@style/common_dialog_message_button"
                android:background="#00000000"
                android:text="@string/yes_label"
                android:textColor="@color/theme_color" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>