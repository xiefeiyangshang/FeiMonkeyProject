<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/alertdialog"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/loading_dialog"
        style="@style/fillx"
        android:layout_width="@dimen/mooc_300_dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@id/loading_pic"
            style="@style/wrap"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/mooc_30_dp"
            android:src="@drawable/loading_pic" >
        </ImageView>

        <TextView
            android:id="@id/content"
            style="@style/dialog_message_content" />
    </LinearLayout>

</LinearLayout>