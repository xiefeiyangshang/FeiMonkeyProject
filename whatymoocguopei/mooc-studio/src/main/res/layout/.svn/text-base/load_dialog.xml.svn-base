<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/dialog_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:background="@drawable/exittext_round"
    android:gravity="center"
    android:paddingBottom="@dimen/mooc_16_dp"
    android:paddingLeft="@dimen/mooc_23_dp"
    android:paddingRight="@dimen/mooc_23_dp"
    android:paddingTop="@dimen/mooc_16_dp" >

    <ImageView
        android:id="@id/dialog_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/dialog_loading" />

    <TextView
        android:id="@id/dialog_content"
        style="@style/MyCourseShareTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/mooc_19_dp" />

</RelativeLayout>